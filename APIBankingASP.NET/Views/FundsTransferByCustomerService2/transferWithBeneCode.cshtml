@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model APIBankingASP.NET.Models.FundsTransferByCustomerService2.TransferRequest
@using (Html.BeginForm("transfer", "FundsTransferByCustomerService2"))
{
    @Html.EditorFor(m => m)

    <fieldset>
        <legend>Request</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.uniqueRequestNo, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.uniqueRequestNo, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.customerID, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.customerID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.debitAccountNo, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.debitAccountNo, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.purposeCode, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.purposeCode, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.beneficiaryCode, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.beneficiaryCode, new { @class = "form-control" })
        </div>
   
        <div class="form-group">
            @Html.LabelFor(m => m.transferAmount, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.transferAmount, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.transferType, new { @class = "control-label col-md-3" })
            @Html.EnumDropDownListFor(m => m.transferType, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.rmtrToBeneInfo, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.rmtrToBeneInfo, new { @class = "form-control" })
        </div>
    </fieldset>

    <button type="submit">Call</button>
}
