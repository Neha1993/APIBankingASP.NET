@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model APIBankingASP.NET.Models.DomesticRemittanceByPartnerService.GetBalanceRequest
@using (Html.BeginForm(new { @class = "form-horizontal" }))
{
    @Html.EditorFor(m => m)

    <fieldset>
        <legend>Request</legend>

        <div class="form-group">
            @Html.LabelFor(m => m.partnerCode, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.partnerCode, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.customerID, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.customerID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.accountNo, new { @class = "control-label col-md-3" })
            @Html.EditorFor(m => m.accountNo, new { @class = "form-control" })
        </div>
    </fieldset>

    <button type="submit">Call</button>
}
